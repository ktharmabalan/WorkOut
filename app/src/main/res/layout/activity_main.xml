<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="ca.codemake.workout.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WORKOUT"
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_weight ="2"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/secondary_color_dark"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin Workout"
        android:id="@+id/btn_begin_workout"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:layout_marginBottom="25dp"
        android:textSize="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Nutrition Calculator"
        android:id="@+id/btn_nutrition_calculator"
        android:layout_weight="1"
        android:layout_marginBottom="100dp"
        android:textSize="24dp" />

</LinearLayout>
