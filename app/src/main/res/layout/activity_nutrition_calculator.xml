<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context="ca.codemake.workout.NutritionCalculatorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:background="@drawable/bottom_border_secondary_dark"
        android:id="@+id/textView14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressRemaining"
        android:layout_below="@+id/textView14">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress"
            android:progress="58"
            android:minHeight="30dp"
            android:maxHeight="30dp" />
        <!--android:progressBackgroundTint="@color/secondary_color"-->

        <TextView
            android:id="@+id/progressBarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remaining 500 calories of 1200"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/progressRemaining"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="500"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CALORIES REMAINING"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/textView4" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add Entry"
            android:textSize="16dp"
            android:id="@+id/btn_nutrition_day"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/button"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:layout_weight="2" />

        <!--android:background="#EAEAEA"-->
    </LinearLayout>

