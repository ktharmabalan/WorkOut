<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/nutrition_card_view"
                style="@style/Setting.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Setting.Title"
                        android:text="Nutrition" />

                    <EditText
                        style="@style/Setting.EditText"
                        android:hint="Target calories per day"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/nutrition_facts_card_view"
                style="@style/Setting.CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_1"
                        style="@style/Setting.Title"
                        android:text="Nutrition Facts" />

                    <Button style="@style/Setting.Button"
                        android:layout_alignBaseline="@+id/title_1"/>

                    <TableLayout
                        style="@style/Setting.TableLayout"
                        android:layout_below="@+id/title_1">

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Fat" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Saturated Fat" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Trans Fat" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Polyunsaturated Fat" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Monounsaturated Fat" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Cholesterol" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Sodium" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Potassium" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Carbohydrate" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Fibre" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Sugar" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Protein" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Vitamin A" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Vitamin C" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Calcium" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Iron" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Thiamine" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Riboflavin" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Vitamin D" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/nutrition_track_card_view"
                style="@style/Setting.CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_2"
                        style="@style/Setting.Title"
                        android:text="Nutrition Facts to Track" />

                    <Button style="@style/Setting.Button" />

                    <TableLayout
                        style="@style/Setting.TableLayout"
                        android:layout_below="@+id/title_2">

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Fat" />

                            <CheckBox
                                style="@style/Setting.Checkbox"

                                android:checked="true"
                                android:text="Saturated Fat" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/meals_card_view"
                style="@style/Setting.CardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_3"
                        style="@style/Setting.Title"
                        android:text="Meals" />

                    <Button style="@style/Setting.Button" />

                    <TableLayout
                        style="@style/Setting.TableLayout"
                        android:layout_below="@+id/title_3">

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Breakfast" />

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Brunch" />
                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Lunch" />

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Dinner" />

                        </TableRow>

                        <TableRow>

                            <CheckBox
                                style="@style/Setting.Checkbox"
                                android:checked="true"
                                android:text="Snack" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!--            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/workout_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            card_view:cardCornerRadius="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/Setting.Title"
                                    android:text="Workout" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>