<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="#EEEEEE">

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Wednesday "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="normal"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bodyGroup"
        android:hint="Body Group"
        android:layout_alignTop="@+id/divider"
        android:layout_toRightOf="@+id/divider"
        android:layout_toEndOf="@+id/divider" />

    <Button
        android:id="@+id/addExerciseToWeekDay"
        style="@style/AppTheme.SmallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@android:drawable/ic_input_add"
        android:layout_toStartOf="@+id/editWeekday"
        android:layout_toLeftOf="@+id/editWeekday"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/editWeekday"
        style="@style/AppTheme.SmallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:backgroundTint="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <!--  divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:background="#9E9E9E" >
    </View>

</RelativeLayout>