<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="android:Theme.Material">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <!--<item name="android:colorPrimaryDark">@color/primary_color_dark</item>-->
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#7652D8</item>



    <!--<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">-->
        <!--ActionBar-->
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->

        <!--ActionBar Options Menu-->
        <!--<item name="android:actionOverflowMenuStyle">@style/AppTheme.ActionMenuOverFlow</item>-->

        <!--Options Menu Text Color-->
        <!--<item name="android:itemTextAppearance">@style/AppTheme.OptionsMenuTextColor</item>-->

        <!---->

        <!--Button-->
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

        <!--EditText-->
        <!--<item name="android:editTextStyle">@style/AppTheme.EditText</item>-->

        <!--TextView-->
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>

    <!-- ActionBar-->
    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color_dark</item>
        <!--ActionBar Text Color-->
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>

    <!--ActionBar Text-->
    <style name="ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!--ActionBar Options Menu-->
    <style name="AppTheme.ActionMenuOverFlow" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">#fff</item>
    </style>

    <!--ActionBar Options Menu Text Color-->
    <style name="AppTheme.OptionsMenuTextColor" parent="android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000</item>
    </style>

    <!--Button-->
    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@color/secondary_color_dark</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!--SmallButton-->
    <style name="AppTheme.SmallButton" parent="AppTheme.Button">
        <!--<item name="android:minHeight">40dp</item>-->
        <item name="android:minWidth">0dp</item>
    </style>

    <!--EditText-->
    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

    <!--TextView-->
    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--ProgressBar-->
    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

</resources>
