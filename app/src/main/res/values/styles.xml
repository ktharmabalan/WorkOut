    <!-- ActionBar-->
    <!--<style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar">-->
    <style name="AppTheme.ActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="background">@color/colorPrimaryDark</item>

        <!--ActionBar Text Color-->
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarText</item>


    </style>

    <!--ActionBar Text-->
    <style name="AppTheme.ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!--ActionButton-->
    <style name="AppTheme.ActionButton" parent="android:Widget.ActionButton">
        <item name="android:color">#fff</item>
    </style>

    <!--ActionBar Options Menu-->
    <style name="AppTheme.ActionMenuOverFlow" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">#fff</item>
    </style>

    <!--ActionBar Options Menu Text Color-->
    <style name="AppTheme.OptionsMenuTextColor" parent="android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000</item>
    </style>

    <!--Button-->
    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!--SmallButton-->
    <style name="AppTheme.SmallButton" parent="AppTheme.Button">
        <!--<item name="android:minHeight">40dp</item>-->
        <item name="android:minWidth">0dp</item>
    </style>

    <!--EditText-->
    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <!--TextView-->
    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--AutoCompleteTextView-->
    <style name="AppTheme.AutoCompleteTextView" parent="android:Widget.AutoCompleteTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <!--ProgressBar-->
    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <!--AlertDialog-->
    <style name="AppTheme.AlertDialog" parent="MaterialDialog">
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialogTitle</item>
        <item name="android:textColorPrimary">#f0f</item>
        <!--message color-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:background">@android:color/transparent</item>
        <!--Entire dialog background-->
    </style>

    <style name="MaterialDialog" parent="android:Theme.Holo.Light.Dialog">
        <!--<style name="MaterialDialog" parent="android:Theme.Holo.Dialog">-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Background for dialog-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/MaterialTitle</item>
    </style>

    <style name="MaterialTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle
        </item>
    </style>

    <style name="AppTheme.AlertDialogTitle" parent="MaterialTitle">
        <item name="android:textAppearance">@style/AppTheme.AlertDialogWindowTitle</item>
    </style>

    <style name="AppTheme.AlertDialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">#fff</item>
        <!--Title color-->
        <item name="android:textStyle">bold</item>
    </style>

