    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color_dark</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:actionMenuTextColor">@color/text_color</item>
        <!--<item name="android:displayOptions">@style/ActionBarText</item>-->
    </style>
    
    <style name="ActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.OverFlow" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.ActionBarWidget" parent="android:Theme.Holo.Light">
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@color/secondary_color_dark</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="AppTheme.SmallButton" parent="AppTheme.Button">
        <!--<item name="android:minHeight">40dp</item>-->
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

</resources>
