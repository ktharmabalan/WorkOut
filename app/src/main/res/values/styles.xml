    <style name="EmptyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#dddddd</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="NutritionBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Nutrition Item -->
    <style name="NutritionBase.Item">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="NutritionBase.Item.Left">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NutritionBase.Item.Middle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NutritionBase.Item.Right">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- Nutrition Sub Item -->
    <style name="NutritionBase.SubItem">
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>

    <style name="NutritionBase.SubItem.Left">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NutritionBase.SubItem.Middle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="NutritionBase.SubItem.Right">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- Nutrition Edit -->

    <style name="Nutrition">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Nutrition.Text">
        <item name="android:gravity">right</item>
    </style>

    <style name="Nutrition.Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nutrition.Edit">
        <item name="android:gravity">right</item>
    </style>

    <style name="Nutrition.Edit.Dv"></style>

    <style name="Nutrition.Edit.Dv.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nutrition.Edit.Amn"></style>


    <!-- Setting -->
    <style name="Setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Setting.Title">
        <!--<item name="android:layout_width">wrap_content</item>-->
        <item name="android:background">@color/gray_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Setting.Checkbox">

    </style>

    <style name="Setting.EditText">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Setting.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <!--<item name="android:layout_gravity">center_vertical</item>-->
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:drawable/ic_input_add</item>
    </style>

    <style name="Setting.TableLayout">
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="Setting.CardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Setting.CardViewContainer">
        <item name="android:background">@color/green_blue</item>
    </style>

    <!-- Custom -->
    <style name="Custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Custom.CardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Custom.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <!--        <item name="android:paddingTop">10dp</item>
                <item name="android:paddingBottom">10dp</item>
                <item name="android:paddingLeft">10dp</item>
                <item name="android:paddingRight">10dp</item>-->
    </style>

    <style name="Custom.Button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Custom.TableLayout">
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="Custom.ImageButton">
        <!--<item name="android:colorButtonNormal">@color/colorAccent</item>-->
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">5dp</item>
        <!--<item name="android:background">@android:drawable/list_selector_background</item>-->
        <item name="android:background">@drawable/round_transparent_button</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
